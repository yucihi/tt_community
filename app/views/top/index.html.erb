<h2>現在の募集一覧</h2>
<table class="col-sm-10" border="1">
<tr>
<th>日付</th>
<th>タイトル</th>
<th>場所</th>
</tr>
<% @contents.each do |content| %>
<tr>
<td><%= content.day %></td>
<td><%= link_to content.title,user_content_path(content.user_id,content.id)  %></td>
<td><%= content.place %></td>
</tr>
<% end %>
</table>