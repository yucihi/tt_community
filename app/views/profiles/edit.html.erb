<h1>Profiles#edit</h1>
<p>Find me in app/views/profiles/edit.html.erb</p>
<%= form_for @profile, :url => user_profile_path do |f| %>
<p><%= f.label :name, "名前" %></p>
<%= f.text_field :name %>
<p><%= f.label :sex, "性別" %></p>
<%= f.text_field :sex %>
<p><%= f.label :birthday, "生年月日" %></p>
<%= f.date_select :birthday %>
<p><%= f.label :team, "team" %></p>
<%= f.text_field :team %>
<p><%= f.label :place, "地域" %></p>
<%= f.text_field :place %>
<p><%= f.submit "プロフィールを登録"	%></p>
<% end %>

